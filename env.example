# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here

# OpenAI API Configuration (REQUIRED - This is an AI-powered project)
# Get your API key from: https://platform.openai.com/api-keys
# This project uses AI for ALL text extraction and summarization
# Without this key, the application will not function
OPENAI_API_KEY=your_openai_api_key_here

# Upload Configuration
MAX_FILE_SIZE=10485760

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=INFO

# For Production Deployment:
# - Set POSTGRES_PASSWORD to a strong password
# - Set OPENAI_API_KEY to your actual OpenAI API key
# - Update CORS_ORIGIN to your frontend domain
